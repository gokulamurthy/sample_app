<style type='text/css'>
body{margin:0px}
form{margin:0px}
.click{font-family:Verdana, Arial, Helvetica, sans-serif; color:#000000; font-size:10px}
.submit_button{font-family: Verdana, Arial, Helvetica, sans-serif;font-size: 10px;font-weight: bold;text-transform: uppercase;color: #FFFFFF;text-decoration: none;background-image: url(/images/buttonbg.gif);background-repeat: no-repeat;background-position: center top;border: 1px solid #002349;padding: 3px;width:120px;background-color: #002349;}
</style>
 
<table align="center" width="400" border="0" cellpadding="0" cellspacing="0" class="click">
<tr valign="middle">
  <% if flash[:notice]=='Password was changed.' %>
     <script type="text/javascript">
     <!--
     closeWin();
     function closeWin() {
  alert("Password Changed Successfully! Please publish the website again for the new password to be reflected in your Admin Area!")
        window.close();
     }
     // -->
     </script>
  <% else %>
    <td height="35" colspan="3" align="center" nowrap id="up_err"><font color="red"><%= flash[:notice] %></font>&nbsp;</td>
  <% end %>
</tr>
<tr>   
    <td align="center" colspan="3" valign="top"><b>Change Password</b></td>
</tr>
<form action="<%= changePassword_users_path %>">
<tr>   
   <td width="134" height="35" align="right" valign="middle"> <strong>Password:</strong></td>
   <td width="15" align="right" valign="middle">&nbsp;</td>
   <td width="251" ><%= password_field 'user', 'password' %></td>
</tr>
<tr>
    <td height="35" align="right" valign="middle"><strong>Confirm Password: </strong></td>
    <td height="35" align="right" valign="middle">&nbsp;</td>
    <td align="left"><%= password_field 'user', 'password_confirmation'%></td>
</tr>
<tr>
    <td height="35" align="right" valign="middle">&nbsp;</td>
    <td height="35" align="right" valign="middle">&nbsp;</td>
    <td align="left"><%= submit_tag "Save", :class => "submit_button" %>&nbsp;&nbsp;&nbsp;<a href="javascript:window.close()">Close</a></td>
</tr>
</form>
</table>